#!/bin/sh

get_icon() {
    case $1 in
        01d) icon="ðŸŒ•";;
        01n) icon="ðŸŒ‘";;
        02d) icon="ðŸŒ¤ï¸";;
        02n) icon="â˜ï¸";;
        03*) icon="â˜ï¸";;
        04*) icon="â˜ï¸";;
        09d) icon="ðŸŒ§ï¸";;
        09n) icon="ðŸŒ§ï¸";;
        10d) icon="ðŸŒ¦ï¸";;
        10n) icon="ðŸŒ§ï¸";;
        11d) icon="ðŸŒ©ï¸";;
        11n) icon="ðŸŒ©ï¸";;
        13d) icon="ðŸŒ¨ï¸";;
        13n) icon="ðŸŒ¨ï¸";;
        50d) icon="ðŸŒ«ï¸";;
        50n) icon="ðŸŒ«ï¸";;
        *) icon="";
    esac

    echo $icon
}

wget -q --spider https://openweathermap.org
if [ $? -ne 0 ]; then
    echo -n ''
    exit 0
fi

# Save API key and city code in openweatherdata.txt each on separated line
# City code can be found in the url of the searched city on openweatermap.org
KEY="$(awk 'NR==1' ${XDG_DWMBLOCKS}/openweatherdata.txt)"
CITY="$(awk 'NR==2' ${XDG_DWMBLOCKS}/openweatherdata.txt)"
UNITS="metric"
SYMBOL="Â°"

API="https://api.openweathermap.org/data/2.5"

if [ -n "$CITY" ]; then
    if [ "$CITY" -eq "$CITY" ] 2>/dev/null; then
        CITY_PARAM="id=$CITY"
    else
        CITY_PARAM="q=$CITY"
    fi

    weather=$(curl -sf "$API/weather?appid=$KEY&$CITY_PARAM&units=$UNITS")
else
    location=$(curl -sf https://location.services.mozilla.com/v1/geolocate?key=geoclue)

    if [ -n "$location" ]; then
        location_lat="$(echo "$location" | jq '.location.lat')"
        location_lon="$(echo "$location" | jq '.location.lng')"

        weather=$(curl -sf "$API/weather?appid=$KEY&lat=$location_lat&lon=$location_lon&units=$UNITS")
    fi
fi

if [ -n "$weather" ]; then
    weather_desc=$(echo "$weather" | jq -r ".weather[0].description")
    weather_temp=$(echo "$weather" | jq ".main.temp" | cut -d "." -f 1)
    weather_icon=$(echo "$weather" | jq -r ".weather[0].icon")

    # echo -n "$(get_icon "$weather_icon")" "$weather_desc", "$weather_temp$SYMBOL"
    echo -n "$weather_desc", "$weather_temp$SYMBOL"
fi
